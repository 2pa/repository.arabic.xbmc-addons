<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.alqaheraalyoum"
       name="AlQaheraAlYoum"
       version="1.0.0"
       provider-name="hadynz">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.beautifulsoup" version="3.0.8"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Al-Qahera Al-Youm</summary>
        <description>Al-Qahera Al-Youm plugin for XBMC. Scrapes episode clips from alqaheraalyoum.net</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.arabic.xbmc-addons" name="Arabic XBMC Add-on Repository" version="1.0.0" provider-name="hadynz">
    <extension point="xbmc.addon.repository" name="Arabic XBMC Add-on Repository">
        <info compressed="false">https://github.com/hadynz/repository.arabic.xbmc-addons/raw/master/addons.xml</info>
        <checksum>https://github.com/hadynz/repository.arabic.xbmc-addons/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/hadynz/repository.arabic.xbmc-addons/raw/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install Hadynz's Addons</summary>
        <description>Download and install addons by Hadynz</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
